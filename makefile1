
all: obj/main.o obj/point2d.o obj/circle.o obj/line.o
	clang++ obj/*.o obj/main.o obj/primitives.o obj/point2d.o obj/line.o obj/transform.o -o output -lSDL2 -Iinclude/ -std=c++11

obj/main.o: main.cpp
	clang++ -c main.cpp -o $@ -Iinclude/ -std=c++11

obj/primitives.o: src/Primitives.cpp
	clang++ -c src/Primitives.cpp -o $@ -Iinclude/ -std=c++11

obj/point2d.o: src/Point2D.cpp
	clang++ -c src/Point2D.cpp -o $@ -Iinclude/ -std=c++11


obj/transform.o: src/Transform.cpp
	clang++ -c src/Transform.cpp -o $@ -Iinclude/ -std=c++11
obj/circle.o:
	clang++ -c src/Circle.cpp -o $@ -Iinclude/ --std=c++11
obj/line.o:
	clang++ -c src/Line.cpp -o $@ -Iinclude/ --std=c++11

clean:
	rm *.o
